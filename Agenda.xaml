<Window x:Class="Asignacion3Aplicada_1.Agenda"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asignacion3Aplicada_1"
        mc:Ignorable="d"
        Title="Agenda" Height="200" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="Nombre"/>
                <TextBox x:Name="NombreTextBox" Height="20" Width="180"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Telefono"/>
                <TextBox x:Name="TelefonoTextBox" Height="20" Width="179"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Email"/>
                <TextBox x:Name="emailTextBox" Height="20" Width="180" Margin="18,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Casa"></Label>
                <TextBox x:Name="CasaTextbox" Height="20" Width="180" Margin="22,0"/>
            </StackPanel>
            <Button x:Name="Guardar" Content="Guardar Datos" Height="23" Width="85" Margin="0,15,300,0" Click="Guardar_Click"/>
        </StackPanel>
    </Grid>
</Window>
